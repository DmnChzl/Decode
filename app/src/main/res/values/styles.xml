<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/greenDark</item>
    </style>

    <style name="HoloTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
    </style>

    <style name="HoloDialog" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@color/greyMaterialLight</item>
    </style>

    <style name="MaterialTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/green</item>
        <item name="android:colorPrimaryDark">@color/greenDark</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
    </style>

    <style name="MaterialDialog" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:textColor">@color/green</item>
        <item name="android:colorAccent">@color/green</item>
    </style>

</resources>